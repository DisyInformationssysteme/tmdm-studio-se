<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app >
    <!-- <distributable/> 
     <listener>
          <listener-class>com.amalto.webapp.core.util.SessionListener</listener-class>
     </listener>-->
     
    <servlet>
        <servlet-name>dwr-invoker</servlet-name>
        <display-name>DWR Servlet</display-name>
        <servlet-class>uk.ltd.getahead.dwr.DWRServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ItemsRemotePaging</servlet-name>
        <display-name>ItemsRemotePaging</display-name>
        <servlet-class>com.amalto.webapp.v3.itemsbrowser.servlet.ItemsRemotePaging</servlet-class>
    </servlet> 
    <servlet>
        <servlet-name>SmartViewServlet</servlet-name>
        <servlet-class>com.amalto.webapp.v3.itemsbrowser.servlet.SmartViewServlet</servlet-class>
    </servlet>
      
    <servlet-mapping>
        <servlet-name>dwr-invoker</servlet-name>
        <url-pattern>/secure/dwr/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemsRemotePaging</servlet-name>
        <url-pattern>/secure/ItemsRemotePaging</url-pattern>
    </servlet-mapping>  
    <servlet-mapping>
        <servlet-name>SmartViewServlet</servlet-name>
        <url-pattern>/secure/SmartViewServlet</url-pattern>
    </servlet-mapping>
       
    <security-constraint>    
        <web-resource-collection>
            <web-resource-name>Secure resources</web-resource-name>
            <url-pattern>/secure/*</url-pattern>
        </web-resource-collection>        
        <web-resource-collection>
            <web-resource-name>WEB-INF</web-resource-name>
            <url-pattern>/WEB-INF/*</url-pattern>
        </web-resource-collection>            
        <auth-constraint>
            <role-name>administration</role-name>
            <role-name>authenticated</role-name>
        </auth-constraint>    
    </security-constraint>
    
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>xtentisWebAppSecurity</realm-name>
        <form-login-config>
            <form-login-page>/auth/login.jsp</form-login-page>
            <form-error-page>/auth/login.jsp?error=loginFailed</form-error-page>
        </form-login-config>
    </login-config>
    
    <security-role>
        <role-name>administration</role-name>
    </security-role> 
    <security-role>
        <role-name>authenticated</role-name>
    </security-role> 
    
</web-app>
