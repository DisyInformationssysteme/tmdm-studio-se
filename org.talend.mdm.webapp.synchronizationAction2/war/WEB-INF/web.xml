<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
	PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <!-- Servlets -->
    <servlet>
        <servlet-name>synchronizationActionServlet</servlet-name>
        <servlet-class>org.talend.mdm.webapp.synchronizationAction2.server.SynchronizationActionServiceImpl</servlet-class>
    </servlet>

    <!-- DWR config -->
    @{dev.mode.excluded.start}
    <servlet>
        <servlet-name>dwr-invoker</servlet-name>
        <display-name>DWR Servlet</display-name>
        <servlet-class>uk.ltd.getahead.dwr.DWRServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>dwr-invoker</servlet-name>
        <url-pattern>/secure/dwr/*</url-pattern>
    </servlet-mapping>
    @{dev.mode.excluded.end}

    <servlet-mapping>
        <servlet-name>synchronizationActionServlet</servlet-name>
        <url-pattern>/synchronizationAction2/synchronizationActionService</url-pattern>
    </servlet-mapping>
    
