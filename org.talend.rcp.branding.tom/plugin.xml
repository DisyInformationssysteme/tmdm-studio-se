<?xml version="1.0" encoding="UTF-8"?>

<plugin>
  <extension
        id="product"
        point="org.eclipse.core.runtime.products">
     <product
           application="org.talend.rcp.branding.tom.application"
           name="%productName">
        <property
              name="appName"
              value="%productName">
        </property>
        <property
              name="aboutImage"
              value="icons/talend-picto-small.gif">
        </property>
        <property
              name="aboutText"
              value="%productBlurb">
        </property>
        <property
              name="windowImages"
              value="icons/appli_16x16.gif,icons/appli_32x32.gif,icons/appli_48x48.gif">
        </property>
        <property
              name="startupForegroundColor"
              value="0080C0">
        </property>
        <property
              name="startupMessageRect"
              value="7,510,445,20">
        </property>
        <property
              name="startupProgressRect"
              value="7,490,445,15">
        </property>
        <property
              name="preferenceCustomization"
              value="plugin_customization.ini">
        </property>
     </product>
  </extension>
  <extension
        id="application"
        point="org.eclipse.core.runtime.applications">
     <application
           icon="icons/talend-picto-small.gif">
        <run
              class="org.talend.rcp.branding.tom.rcp.Application">
        </run>
     </application>
  </extension>

   <extension
         point="org.eclipse.ui.intro.config">
      <config
            introId="org.talend.mdm.intro"
            content="introContent.xml"
            id="org.talend.mdm.configId">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx">
            </implementation>
         </presentation>
      </config>
   </extension>
      <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            icon="icons/talend-picto-small.gif"
            id="org.talend.mdm.intro">
      </intro>
      <introProductBinding
            introId="org.talend.mdm.intro"
            productId="org.talend.rcp.branding.tom.product">
      </introProductBinding>
   </extension>
</plugin>
